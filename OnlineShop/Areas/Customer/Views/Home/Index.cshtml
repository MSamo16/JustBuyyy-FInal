</head>
<body style="background-color:transparent;margin:auto">

    <!-- Start WOWSlider.com BODY section --> <!-- add to the <body> of your page -->
    <div id="wowslider-container1">
        <div class="ws_images">
            <ul>
                <li><img src="/data1/images/1.jpg" alt="1" title="1" id="wows1_0" /></li>
                <li><img src="/data1/images/2.jpg" alt="2" title="2" id="wows1_1" /></li>
                <li><img src="/data1/images/3.jpg" alt="3" title="3" id="wows1_2" /></li>
                <li><img src="/data1/images/4.jpg" alt="4" title="4" id="wows1_3" /></li>
                <li><a href="http://wowslider.net"><img src="/data1/images/5.jpg" alt="javascript photo gallery" title="5" id="wows1_4" /></a></li>
                <li><img src="/data1/images/6.jpg" alt="6" title="6" id="wows1_5" /></li>
            </ul>
        </div>
        <div class="ws_bullets">
            <div>
                <a href="#" title="1"><span><img src="/data1/tooltips/1.jpg" alt="1" />1</span></a>
                <a href="#" title="2"><span><img src="/data1/tooltips/2.jpg" alt="2" />2</span></a>
                <a href="#" title="3"><span><img src="/data1/tooltips/3.jpg" alt="3" />3</span></a>
                <a href="#" title="4"><span><img src="/data1/tooltips/4.jpg" alt="4" />4</span></a>
                <a href="#" title="5"><span><img src="/data1/tooltips/5.jpg" alt="5" />5</span></a>
                <a href="#" title="6"><span><img src="/data1/tooltips/6.jpg" alt="6" />6</span></a>
            </div>
        </div><div class="ws_script" style="position:absolute;left:-99%"><a href="http://wowslider.net">image carousel</a> by WOWSlider.com v9.0</div>
        <div class="ws_shadow"></div>
    </div>
    <script type="text/javascript" src="/engine1/wowslider.js"></script>
    <script type="text/javascript" src="/engine1/script.js"></script>
    <!-- End WOWSlider.com BODY section -->

</body>
</html>


<br />
<br />
<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h4 class="my-0 font-weight-normal">
                        <label style="font-size: 23px;color: steelblue">@product.Name</label>
                    </h4>
                </div>
                <img src="~/@product.Image" alt="Card Image" class="card-img-top" style="height: 300px;" />
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <label style="font-size: 20px;color: #a51313"><b>Price : @product.Price</b></label>
                        </div>
                        <a asp-action="Detail" asp-controller="Home" asp-route-id="@product.Id" class="btn btn-success pull-right btn-outline-info">Deatils</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
<div>
    @Html.PagedListPager(Model, c => Href("~/Customer/Home/Index?page=" + c), PagedListRenderOptionsBase.PageNumbersOnly)
</div>


